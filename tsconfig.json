{
    "CompilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,  
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es2015"],
        "target": "es6",
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}